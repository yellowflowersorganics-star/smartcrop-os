# EditorConfig for SmartCrop OS
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.py]
indent_size = 4

[*.{cpp,h}]
indent_size = 2

[Makefile]
indent_style = tab

[*.json]
indent_size = 2

[*.{yaml,yml}]
indent_size = 2

